<%- include("./static/header.ejs") %>
<%- include("./static/navbar.ejs") %>

<div class="cardView">
  <% for (let i = 0; i < locals.title.length; i++) { %>
    <div class="card" id="cardDisplay" style="width: 18rem; --bs-card-bg: #0f0c0c;">
      <img src="/blogImg.jpg" class="card-img-top card-img" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= locals.title[i].substring(0,20); %>....</h5>
        <p class="card-text"><%= locals.content[i].substring(0, 100); %> .....</p>
        <a href="#" class="btn btn-primary customButton" onclick="fadeOutAndRedirect(<%= i %>);">Read blog</a>
    </div>
    </div>
  <% } %>
</div>
<script src="/redirect.js"></script>
